# Root .env.example
# Copy relevant sections into:
# - frontend/.env.local for local Next.js client usage (Vercel in prod)
# - backend/.env for local Express server usage (Render in prod)

###############################################
# Frontend (Next.js on Vercel)
# These must be prefixed with NEXT_PUBLIC_ to be available in the browser.
# Local development defaults point to localhost services.
###############################################
NEXT_PUBLIC_BACKEND_URL=http://localhost:5000
# Map to Render service URL in production, e.g. https://your-backend.onrender.com
# On Vercel Project Settings -> Environment Variables, set:
#   NEXT_PUBLIC_BACKEND_URL=https://<render-service>.onrender.com

NEXT_PUBLIC_FRONTEND_URL=http://localhost:3000
# Optional: for in-app redirects. On Vercel, set to your Vercel domain, e.g. https://your-app.vercel.app

###############################################
# Backend (Node/Express on Render)
# Local development defaults point to localhost frontend and Mongo.
# On Render, set these in the service Environment.
###############################################
PORT=5000
FRONTEND_URL=http://localhost:3000
# On Render, set FRONTEND_URL to your Vercel domain, e.g. https://your-app.vercel.app

CORS_ORIGIN=http://localhost:3000
# On Render, set CORS_ORIGIN to the same Vercel domain as FRONTEND_URL

MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/contest-calendar
SESSION_SECRET=your_session_secret_here

GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
GOOGLE_REDIRECT_URI=http://localhost:5000/auth/google/callback
# On Render, set GOOGLE_REDIRECT_URI to:
#   https://<render-service>.onrender.com/auth/google/callback

###############################################
# GitHub Actions (Scheduled Update)
# The workflow at .github/workflows/deploy.yml uses the secret BACKEND_BASE_URL
# to call: ${BACKEND_BASE_URL}/api/update-contests
# Configure in GitHub repo settings -> Secrets and variables -> Actions:
#   BACKEND_BASE_URL=https://<render-service>.onrender.com
